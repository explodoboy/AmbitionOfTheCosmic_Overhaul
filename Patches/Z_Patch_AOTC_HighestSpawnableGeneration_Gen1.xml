<Patch>

    <Operation Class="XmlExtensions.UseSetting">
        <modId>explodoboy.AmbitionOfTheCosmic</modId>
        <key>AOTC_HighestSpawnableGeneration</key>
        <defaultValue>Gen0</defaultValue>
        <apply>
            <Operation Class="XmlExtensions.PatchByCase">
                <value>{AOTC_HighestSpawnableGeneration}</value>
                <cases>
                    <li>
                        <value>Gen0</value> <!-- Completely disable the ability for non-material items to spawn randomly in the world. -->
                        <apply>

                            <!-- Drugs -->
                            <Operation Class="PatchOperationRemove">
                                <xpath>Defs/ThingDef[defName="AOTC_DrugImmune_GenI"]/tradeTags</xpath>
                            </Operation>
                            <Operation Class="PatchOperationRemove">
                                <xpath>Defs/ThingDef[defName="AOTC_DrugMood_GenI"]/tradeTags</xpath>
                            </Operation>
                            <Operation Class="PatchOperationRemove">
                                <xpath>Defs/ThingDef[defName="AOTC_DrugPsychicBoost_GenI"]/tradeTags</xpath>
                            </Operation>
                            <Operation Class="PatchOperationRemove">
                                <xpath>Defs/ThingDef[defName="AOTC_DrugSleep_GenI"]/tradeTags</xpath>
                            </Operation>
                            <Operation Class="PatchOperationRemove">
                                <xpath>Defs/ThingDef[defName="AOTC_DrugTemporaryBionics_GenI"]/tradeTags</xpath>
                            </Operation>
                            

                            <!-- Bionics -->
                            <Operation Class="PatchOperationRemove">
                                <xpath>Defs/ThingDef[@Name="AOTC_BionicItemBase_GenI"]/tradeTags</xpath>
                            </Operation>
                            

                            <!-- Medicine -->
                            <Operation Class="PatchOperationRemove">
                                <xpath>Defs/ThingDef[defName="AOTC_Medicine_GenI"]/tradeTags</xpath>
                            </Operation>
                            <Operation Class="PatchOperationRemove">
                                <xpath>Defs/ThingDef[defName="AOTC_Medicine_GenI"]/thingSetMakerTags</xpath>
                            </Operation>


                            <!-- Grenades -->
                            <Operation Class="PatchOperationRemove">
                                <xpath>Defs/ThingDef[defName="AOTC_GrenadeEMP_GenI"]/tradeTags</xpath>
                            </Operation>
                            <Operation Class="PatchOperationRemove">
                                <xpath>Defs/ThingDef[defName="AOTC_GrenadeExplosive_GenI"]/tradeTags</xpath>
                            </Operation>
                            <Operation Class="PatchOperationRemove">
                                <xpath>Defs/ThingDef[defName="AOTC_GrenadeFire_GenI"]/tradeTags</xpath>
                            </Operation>
                            <Operation Class="PatchOperationRemove">
                                <xpath>Defs/ThingDef[defName="AOTC_GrenadeFirefoam_GenI"]/tradeTags</xpath>
                            </Operation>
                            <Operation Class="PatchOperationRemove">
                                <xpath>Defs/ThingDef[defName="AOTC_GrenadeStun_GenI"]/tradeTags</xpath>
                            </Operation>
                            <Operation Class="PatchOperationRemove">
                                <xpath>Defs/ThingDef[defName="AOTC_GrenadeToxGas_GenI"]/tradeTags</xpath>
                            </Operation>

                            <Operation Class="PatchOperationRemove">
                                <xpath>Defs/ThingDef[defName="AOTC_GrenadeEMP_GenI"]/weaponTags</xpath>
                            </Operation>
                            <Operation Class="PatchOperationRemove">
                                <xpath>Defs/ThingDef[defName="AOTC_GrenadeExplosive_GenI"]/weaponTags</xpath>
                            </Operation>
                            <Operation Class="PatchOperationRemove">
                                <xpath>Defs/ThingDef[defName="AOTC_GrenadeFire_GenI"]/weaponTags</xpath>
                            </Operation>
                            <Operation Class="PatchOperationRemove">
                                <xpath>Defs/ThingDef[defName="AOTC_GrenadeStun_GenI"]/weaponTags</xpath>
                            </Operation>
                            <Operation Class="PatchOperationRemove">
                                <xpath>Defs/ThingDef[defName="AOTC_GrenadeToxGas_GenI"]/weaponTags</xpath>
                            </Operation>


                            <!-- Melee -->
                            <Operation Class="PatchOperationRemove">
                                <xpath>Defs/ThingDef[@Name="AOTC_BaseMeleeWeapon_Sharp_Quality_GenI"]/tradeTags</xpath>
                            </Operation>
                            <Operation Class="PatchOperationRemove">
                                <xpath>Defs/ThingDef[@Name="AOTC_BaseMeleeWeapon_Blunt_Quality_GenI"]/tradeTags</xpath>
                            </Operation>


                            <!-- Guns -->
                            <Operation Class="PatchOperationRemove">
                                <xpath>Defs/ThingDef[defName="AOTC_Pistol_GenI"]/tradeTags</xpath>
                            </Operation>
                            <Operation Class="PatchOperationRemove">
                                <xpath>Defs/ThingDef[defName="AOTC_Rifle_GenI"]/tradeTags</xpath>
                            </Operation>
                            <Operation Class="PatchOperationRemove">
                                <xpath>Defs/ThingDef[defName="AOTC_Shotgun_GenI"]/tradeTags</xpath>
                            </Operation>
                            <Operation Class="PatchOperationRemove">
                                <xpath>Defs/ThingDef[defName="AOTC_Sniper_GenI"]/tradeTags</xpath>
                            </Operation>

                            <Operation Class="PatchOperationRemove">
                                <xpath>Defs/ThingDef[defName="AOTC_Pistol_GenI"]/weaponTags</xpath>
                            </Operation>
                            <Operation Class="PatchOperationRemove">
                                <xpath>Defs/ThingDef[defName="AOTC_Rifle_GenI"]/weaponTags</xpath>
                            </Operation>
                            <Operation Class="PatchOperationRemove">
                                <xpath>Defs/ThingDef[defName="AOTC_Shotgun_GenI"]/weaponTags</xpath>
                            </Operation>
                            <Operation Class="PatchOperationRemove">
                                <xpath>Defs/ThingDef[defName="AOTC_Sniper_GenI"]/weaponTags</xpath>
                            </Operation>

                            <Operation Class="PatchOperationRemove">
                                <xpath>Defs/ThingDef[defName="AOTC_Pistol_GenI"]/thingSetMakerTags</xpath>
                            </Operation>
                            <Operation Class="PatchOperationRemove">
                                <xpath>Defs/ThingDef[defName="AOTC_Rifle_GenI"]/thingSetMakerTags</xpath>
                            </Operation>
                            <Operation Class="PatchOperationRemove">
                                <xpath>Defs/ThingDef[defName="AOTC_Shotgun_GenI"]/thingSetMakerTags</xpath>
                            </Operation>
                            <Operation Class="PatchOperationRemove">
                                <xpath>Defs/ThingDef[defName="AOTC_Sniper_GenI"]/thingSetMakerTags</xpath>
                            </Operation>


                            <!-- Apparel -->
                            <Operation Class="PatchOperationRemove">
                                <xpath>Defs/ThingDef[defName="AOTC_ArmorBody_GenI"]/apparel/defaultOutfitTags</xpath>
                            </Operation>
                            <Operation Class="PatchOperationRemove">
                                <xpath>Defs/ThingDef[defName="AOTC_ArmorBody_GenI"]/tradeTags</xpath>
                            </Operation>
                            <Operation Class="PatchOperationRemove">
                                <xpath>Defs/ThingDef[defName="AOTC_ArmorBody_GenI"]/thingSetMakerTags</xpath>
                            </Operation>
                            
                            <Operation Class="PatchOperationRemove">
                                <xpath>Defs/ThingDef[defName="AOTC_ArmorHead_GenI"]/apparel/defaultOutfitTags</xpath>
                            </Operation>
                            <Operation Class="PatchOperationRemove">
                                <xpath>Defs/ThingDef[defName="AOTC_ArmorHead_GenI"]/tradeTags</xpath>
                            </Operation>
                            <Operation Class="PatchOperationRemove">
                                <xpath>Defs/ThingDef[defName="AOTC_ArmorHead_GenI"]/thingSetMakerTags</xpath>
                            </Operation>
                            
                            <Operation Class="PatchOperationRemove">
                                <xpath>Defs/ThingDef[defName="AOTC_UtilityBelt_GenI"]/tradeTags</xpath>
                            </Operation>
                            <Operation Class="PatchOperationRemove">
                                <xpath>Defs/ThingDef[defName="AOTC_UtilityBelt_GenI"]/thingSetMakerTags</xpath>
                            </Operation>

                        </apply>
                    </li>
                </cases>
            </Operation>
        </apply>
    </Operation>

</Patch>